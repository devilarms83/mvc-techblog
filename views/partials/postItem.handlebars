<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
      <a href="/post/{{id}}">
        <div class="col-8">{{post_title}}</div>
      </a>
    </h2>
    <div class="col-3">posted by <span style="color: var(--primary);">{{user.username}}</span> on <span style="color: var(--primary);">{{format_date date_created}}</span>
    </div>
  </div>  
  <p class="card-body">
   {{post_content}}
  </p>
</div>
